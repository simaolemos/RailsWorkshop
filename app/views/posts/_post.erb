<% @posts.each do |post| %>
  <div style="padding: 20px; width: 100%; background: #f1f1f1; border: 1px solid #ccc;">
    Created by: <%= link_to("@#{post.user.username}", post.user.username) %>: <%= "#{time_ago_in_words(post.created_at)} ago" %>
    <hr style="border: 0px; width: 100%; height: 1px; background: #ccc">
    <%= post.body %>
  </div>
<% end %>
